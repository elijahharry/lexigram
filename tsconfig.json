{
  "compilerOptions": {
    "lib": ["esnext"],
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "target": "ESNext",
    "strictNullChecks": true,
    "importHelpers": false
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
